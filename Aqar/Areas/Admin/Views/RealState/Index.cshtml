@model IEnumerable<RealState>

<div class="container-fluid">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-6  text-center d-flex">
                <div class="card">
                    <img class="card-img-top" src="~/Images/5.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.Name</h5>
                        <p class="card-text">
                            <p>
                                <i class="location-icon fa fa-map-marker-alt"></i>
                                    @item.FullAdress
                            </p>
                    </div>
                    <ul class="list-group list-group-flush mt-auto">
                        <li class="list-group-item"><span class="integer">@item.Area</span> M²</li>
                        <li class="list-group-item">
                            <span class="integer">@item.Price</span>
                            <span>EGP</span>
                        </li>
                    </ul>
                   
                    <a asp-action="Edit" asp-controller="RealState" asp-route-id="@item.Id" class="card-footer">Edit</a>
                      <a asp-action="Edit" asp-controller="RealState" asp-route-id="@item.Id" class="card-footer">Details</a>
                    
                </div>
            </div>
        }
    </div>
</div>


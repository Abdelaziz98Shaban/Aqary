@model IEnumerable<Category>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">Category List</h2>
		</div>
        <div class="col-6 text-end creat_button">
            <a asp-controller="Category" asp-action="Create" class="btn btn-lg btn-dark">
               Create New Category
			</a>
		</div>
	</div>
    <br /><br />

    <table class="table table-hover " style="width:100%">
        <thead class="table-dark">
            <tr>
                <th>
                    Category Name
			    </th>
                <th>
                    Actions
                </th>
		    </tr>
	    </thead>
        <tbody class="table-success opacity-75">
            @foreach(var obj in Model)
            {
                <tr>
                    <td width="70%">
                        @obj.Name
				    </td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-dark mx-2 ">Edit</a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
					    </div>
				    </td>
			    </tr>
            }
        </tbody>
    </table>

</div>